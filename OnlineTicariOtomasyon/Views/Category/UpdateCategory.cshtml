@model OnlineTicariOtomasyon.Models.Classes.Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Kategori Güncelle</h2>
<br />

<form class="form-group" method="post">
    @Html.LabelFor(x => x.CategoryId, new { @class = "form-control"})
    @Html.TextBoxFor(x => x.CategoryId, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.CategoryName, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">Güncelle</button>
</form>
