@using OnlineTicariOtomasyon.Models.Classes
@model Product
@{
    ViewBag.Title = "BringProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Ürün Ekle</h2>
@using (Html.BeginForm("UpdateProduct","Product", FormMethod.Post))
{
    @Html.LabelFor(x => x.ProductId, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.ProductId, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.ProductName, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Brand, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.Brand, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Stock, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.PurchasePrice, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.PurchasePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SalePrice, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    <label>Kategori</label>
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.values,new { @class="form-control"})
    <br />
    @Html.LabelFor(x => x.Image, new { @class = "form-control" })
    @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>

}
