@using OnlineTicariOtomasyon.Models.Classes
@model List<Sale>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satışlar</h2>
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Cari Ad-Soyad</th>
            <th>Personel Ad-Soyad</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>

    @foreach (var s in Model)
    {
        <tr>
            <td>@s.SalesId</td>
            <td>@s.Product.ProductName</td>
            <td>@s.Current.CurrentName @s.Current.CurrentSurname</td>
            <td>@s.Employee.EmployeName @s.Employee.EmployeSurname</td>
            <td>@s.Piece</td>
            <td>@s.Price</td>
            <td>@s.SumPrice</td>
            <td>@s.Date</td>
            <td><a href="/Sales/BringSale/@s.SalesId" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Sales/SaleDetails/@s.SalesId" class="btn btn-warning">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Sales/AddSale" class="btn btn-primary">Yeni Satış</a>

