@using OnlineTicariOtomasyon.Models.Classes
@model Sale
@{
    ViewBag.Title = "SaleDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Satış Detay</h2>
<table id="tbl1" class="table table-bordered" style="margin-top:20px;">
    <thead>
        <tr>
            <th>Satış Id</th>
            <th>Ürün</th>
            <th>Cari Ad-Soyad</th>
            <th>Personel Ad-Soyad</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam</th>
            <th>Tarih</th>
            
        </tr>
    </thead>


    <tr>
        <td>@Model.SalesId</td>
        <td>@Model.Product.ProductName</td>
        <td>@Model.Current.CurrentName @Model.Current.CurrentSurname</td>
        <td>@Model.Employee.EmployeName @Model.Employee.EmployeSurname</td>
        <td>@Model.Piece</td>
        <td>@Model.Price</td>
        <td>@Model.SumPrice</td>
        <td>@Model.Date</td>


    </tr>

</table>
<a href="#" class="btn btn-default" style="background-color:dodgerblue">Yazdır</a>